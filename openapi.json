{
  "openapi": "3.1.0",
  "info": {
    "title": "Imágenes Griky API",
    "description": "Busca imágenes académicas y retorna la imagen con su cita en formato APA",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://imagenes-griky-api.onrender.com"
    }
  ],
  "paths": {
    "/imagenes": {
      "post": {
        "operationId": "buscarImagenAcademica",
        "summary": "Buscar imagen académica y cita APA",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "titulo": {
                    "type": "string",
                    "example": "Partes del corazón humano"
                  }
                },
                "required": ["titulo"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Respuesta con imagen y cita APA",
            "content": {
              "application/json": {}
            }
          }
        }
      }
    }
  }
}
