{
  "openapi": "3.0.0",
  "info": {
    "title": "Imágenes Griky API",
    "version": "1.0.0",
    "description": "API que busca imágenes académicas en fuentes abiertas o las genera con IA si no se encuentran, devolviendo además la referencia en formato APA 7."
  },
  "paths": {
    "/imagenes": {
      "post": {
        "summary": "Buscar imagen académica",
        "operationId": "buscarImagenAcademica",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "titulo": {
                    "type": "string",
                    "description": "Título o tema de la imagen académica (en español o inglés)."
                  }
                },
                "required": ["titulo"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Respuesta con los datos de la imagen",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "titulo": { "type": "string" },
                    "url": { "type": "string", "format": "uri" },
                    "autor": { "type": "string" },
                    "fuente": { "type": "string" },
                    "licencia": { "type": "string" },
                    "nota": { "type": "string" },
                    "referencia": { "type": "string" },
                    "markdown": { "type": "string" },
                    "generada_por_ia": { "type": "boolean" }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Error en la generación o búsqueda de imagen"
          }
        }
      }
    }
  }
}
