{
  "openapi": "3.0.0",
  "info": {
    "title": "Imágenes Griky API",
    "version": "1.0.0",
    "description": "API que busca imágenes académicas en fuentes abiertas (Wikimedia, EuropePMC, Openverse, Pixabay) y si no las encuentra, las genera con IA, devolviendo además su referencia en formato APA 7."
  },
  "paths": {
    "/imagenes": {
      "post": {
        "summary": "Buscar imagen académica y generar APA 7",
        "operationId": "buscarImagenAcademica",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "titulo": {
                    "type": "string",
                    "description": "Título o tema de la imagen (en español o inglés)."
                  }
                },
                "required": ["titulo"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Respuesta con información visual académica",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "titulo": { "type": "string" },
                    "url": { "type": "string", "format": "uri" },
                    "autor": { "type": "string" },
                    "fuente": { "type": "string" },
                    "licencia": { "type": "string" },
                    "nota": { "type": "string", "description": "Texto con formato APA 7 para incluir como pie de figura." },
                    "referencia": { "type": "string", "description": "Referencia bibliográfica en formato APA 7." },
                    "markdown": { "type": "string", "description": "Código markdown con la imagen." },
                    "generada_por_ia": { "type": "boolean" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
