{
  "openapi": "3.1.0",
  "info": {
    "title": "Buscador de imágenes académicas",
    "version": "1.0.0"
  },
  "paths": {
    "/buscar-imagen": {
      "get": {
        "operationId": "buscarImagenAcademica",
        "summary": "Buscar imagen académica",
        "description": "Busca una imagen académica por título. Si no se encuentra, la genera con IA.",
        "parameters": [
          {
            "name": "titulo",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Título o palabra clave de la imagen a buscar"
          }
        ],
        "responses": {
          "200": {
            "description": "Respuesta con imagen y cita APA",
            "content": {
              "application/json": {
                "example": {
                  "titulo": "corazon humano",
                  "url": "https://upload.wikimedia.org/wikipedia/commons/6/6e/Heart_diagram.svg",
                  "cita": "Wikimedia Commons. (2025). *Heart diagram* [Imagen]. https://upload.wikimedia.org/wikipedia/commons/6/6e/Heart_diagram.svg",
                  "fuente": "Wikimedia Commons",
                  "autor": "Desconocido",
                  "licencia": "CC BY-SA o Dominio público"
                }
              }
            }
          }
        }
      }
    }
  }
}
